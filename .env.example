# ============================================================
# FLOCIFY BACKEND - ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env and fill in your values

# ============================================================
# ENVIRONMENT MODE
# ============================================================
# Set to 'production' when deploying to Hostinger
NODE_ENV=development

# ============================================================
# SERVER CONFIGURATION
# ============================================================
# Hostinger will set this automatically, leave empty for production
PORT=1234

# ============================================================
# FRONTEND URL (CORS)
# ============================================================
# Set this to your frontend domain in production
# Example: https://flocify.com or https://www.flocify.com
FRONTEND_URL=http://localhost:5173

# ============================================================
# SUPABASE CONFIGURATION
# ============================================================
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
